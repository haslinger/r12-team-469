<%- model_class = InvoicePosition -%>
<%= bootstrap_error(@invoice_position, model_class ) %>

<%= simple_form_for @invoice_position, :html => { :class => 'form-horizontal' }, :remote => true do |f| %>
  <%= f.input :invoice_header_id, :disabled => true %>
  <%= f.input :textposition %>
  <%= f.association :product, :label_method => :shorttext %>
  <%= f.input :quantity, :input_html => { :onchange => "calculate_value()" } %>
  <%= f.association :unit, :label_method => :shorttext %>
  <%= f.input :discount %>
  <div id="value"><%= f.input :value %></div>
  <%= f.input :vatrate %>
  <%= f.input :price %>
  <%= f.input :base_price %>
  <%= f.input :description %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                invoice_positions_path, :class => 'btn' %>
  </div>
<% end %>
